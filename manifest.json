{
  "name" : "MyTextTemplates",
  "version" : "0.1",
  "description" : "A text template manager",
  "permissions": [
    "tabs"
  ],
  "browser_action": {
     "default_icon": "img/icon.png"
  },
  "icons": { "16": "img/icon-16.png", "128": "img/icon-128.png" },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2
}